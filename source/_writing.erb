<section id="writing">
  <div class="mw9 center">
    <div class="flex justify-between items-center">
      <h1 class="text-fade">Writing</h1>
      <a href="/writing" class="link text-fade">View all articles</a>
    </div>
    <% blog('writing').articles[0...3].each do |article| %>
    <article>
      <div class="article-meta">
        <a href="<%= article.url %>">
          <h2 class="text-fade"><%= article.title %></h2>
        </a>
        <time class="text-fade"><%= article.date.strftime('%B %Y') %></time>
      </div>
      <div class="article-intro">
        <%= article.summary %>
        <a href="<%= article.url %>" class="button text-fade">Read more</a>
      </div>
    </article>
    <% end %>
  </div>
</section>